<div class="w3-container w3-padding-large w3-dark-grey w3-section w3-bottombar w3-padding-16" style="position:relative;">
  <button id="baseMode" class="w3-button w3-teal w3-margin-bottom" onclick = "baseMode()" disabled>Base</button>
  <button id="customMode" class="w3-button w3-teal w3-margin-bottom" onclick = "customMode()">Custom</button>
  <button id="stateTaxLookUp" class="w3-button w3-blue-grey w3-margin-bottom" value="false" onclick="findSalesTaxTable()" style="position:absolute; right:150px;">State Tax Look Up</button>
  <button id="clear" class="w3-button w3-deep-purple w3-margin-bottom" onclick="Clear()" style="position:absolute; right:25px">Clear Form</button>
</div>
<div id="salesTaxTableView" class="w3-container w3-padding-large w3-blue-grey w3-section w3-bottombar w3-padding-16" style="position:relative; display:none;">
